{
  "name": "mcp-research-assistant",
  "version": "0.1.0",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/main.ts",
    "start:mcp": "bun run ./node_modules/mcp-wrapper/src/scripts/start-server.ts",
    "dev": "bun run -w src/main.ts",
    "build": "bun build src/main.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/inspector": "^0.2.7",
    "@modelcontextprotocol/sdk": "^1.0.3",
    "ajv": "^8.17.1",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "exa-js": "^1.3.3",
    "json5": "^2.2.3",
    "mcp-wrapper": "link:mcp-wrapper",
    "uuid": "^11.0.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.11",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@types/uuid": "^10.0.0",
    "bunyan": "^1.8.15",
    "concurrently": "^9.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/types/**/*.ts",
      "!src/tests/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
